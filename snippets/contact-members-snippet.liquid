<section class="Section Section--spacingNormal teamMemberSection" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="article-list">

      {%- if section.settings.subheading1 != blank or section.settings.title1 != blank -%}
        <header class="SectionHeader SectionHeader--center">
          {%- if section.settings.subheading1 != blank -%}
            <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading1 | escape }}</h3>
          {%- endif -%}
  
          {%- if section.settings.title1 != blank -%}
            <h2 class="SectionHeader__Heading Heading u-h1 ">{{ section.settings.title1 | escape }}</h2>
          {%- endif -%}
        </header>
      {%- endif -%}

    {% capture BlocksContent %}
      {%- if section.settings.image != blank -%}
        <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up ">
            {%- render 'member-item', contact_page: true, image: section.settings.image, title: section.settings.name, text: section.settings.text -%}
        </div>
      {%- endif -%}
      {%- if section.settings.image2 != blank -%}
        <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up ">
            {%- render 'member-item', contact_page: true, image: section.settings.image2, title: section.settings.name2, text: section.settings.text2 -%}
        </div>
      {%- endif -%}
      {%- if section.settings.image3 != blank -%}
        <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up ">
            {%- render 'member-item', contact_page: true, image: section.settings.image3, title: section.settings.name3, text: section.settings.text3 -%}
        </div>
      {%- endif -%}
      {%- if section.settings.image4 != blank -%}
        <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up ">
            {%- render 'member-item', contact_page: true, image: section.settings.image4, title: section.settings.name4, text: section.settings.text4 -%}
        </div>
      {%- endif -%}
    {% endcapture %}

      <div class="ArticleListWrapper" style="max-width: unset;">
        <div class="ArticleList Grid Grid--center team_members_grid">
          {{BlocksContent}}
        </div>
      </div>


      {%- if section.settings.button_text != blank -%}
        <div class="SectionFooter">
          <a href="{{ section.settings.button_link }}" class="Button Button--primary">{{ section.settings.button_text | escape }}</a>
        </div>
      {%- endif -%}

  </section>

