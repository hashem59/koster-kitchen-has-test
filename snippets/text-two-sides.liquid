<section class="Section text-two-sides">
    {%- capture section_content -%}
      <div class="FeatureText__ContentWrapper">
        <div class="FeatureText__Content">
          {%- if section.settings.text_subheading != blank or section.settings.text_title != blank -%}
            <header class="SectionHeader">
              {%- if section.settings.text_subheading != blank -%}
                <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.text_subheading | escape }}</h3>
              {%- endif -%}
  
              {%- if section.settings.text_title != blank -%}
                <h2 class="SectionHeader__Heading Heading u-h1 text_title_font">{{ section.settings.text_title | escape }}</h2>
              {%- endif -%}
  
              {%- if section.settings.text_content != blank -%}
                <div class="SectionHeader__Description Rte">
                  {{ section.settings.text_content }}
                </div>
              {%- endif -%}
  
              {%- if section.settings.text_link_text != blank -%}
                <a href="{{ section.settings.text_link_url }}" class="Link Link--underline">{{ section.settings.text_link_text | escape }}</a>
              {%- endif -%}
            </header>
          {%- endif -%}
        </div>
      </div>
    {%- endcapture -%}
  
    {%- capture section_reviews -%}
        <div class="FeatureText__ImageWrapper">
            {% if section.settings.reviews_score %}
                {% assign stars = section.settings.reviews_score | times: 1.00 %}
                <div class="stars">
                    {%- for i in (1..5) -%}
                    {% assign half_star = i | minus: 0.5 %}
                    {%- if stars >= i -%}
                      <span class="clip-star star-on"></span>
                    {% elsif stars == half_star %}
                      <span class="clip-star star-half"></span>
                    {% else %}
                      <span class="clip-star star-off"></span>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
            {% endif %}
            {%- if section.settings.reviews_subheading != blank or section.settings.reviews_title != blank -%}
            <header class="SectionHeader">
              {%- if section.settings.reviews_subheading != blank -%}
                <h3 class="SectionHeader__SubHeading Heading u-h6 regular_font ">
                  <span class="bold_weight">{{ section.settings.reviews_subheading | escape }}</span>
                  <span style="color: #4f4f4f;font-weight: 500;">{{ section.settings.reviews_subheading2 | escape }}</span>
                </h3>
              {%- endif -%}
  
              {%- if section.settings.reviews_title != blank -%}
                <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.reviews_title | escape }}</h2>
              {%- endif -%}
  
              {%- if section.settings.reviews_content != blank -%}
                <div class="SectionHeader__Description Rte">
                  {{ section.settings.reviews_content }}
                </div>
              {%- endif -%}
  
              {%- if section.settings.reviews_link_text != blank -%}
                <a href="{{ section.settings.reviews_link_url }}" class="Link Link--underline">{{ section.settings.reviews_link_text | escape }}</a>
              {%- endif -%}
            </header>
          {%- endif -%}
        </div>
    {%- endcapture -%}
  
    <div class="FeatureText FeatureText--withImage FeatureText--image{{ section.settings.image_position | capitalize }}">
      {%- if section.settings.image_position == 'left' -%}
        {{- section_reviews -}}
        {{- section_content -}}
      {%- else -%}
        {{- section_content -}}
        {{- section_reviews -}}
      {%- endif -%}
    </div>
</section>

<style>
    .text_title_font{ font-size: {{section.settings.text_size_desktop}}px !important;}
    @media screen and (max-width: 640px) {
        .text_title_font{ font-size: {{section.settings.text_size_mobile}}px !important;}
    }

</style>