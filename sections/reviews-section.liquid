          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Sub-heading"
          },
          {
            "type": "range",
            "id": "reviews_score",
            "label": "Reviews rate",
            "min": 0,
            "max": 5,
            "step": 0.5,
            "default": 5
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Tell your story"
          },
          {
            "type": "richtext",
            "id": "quote",
            "label": "Quote",
            "default": "<p>Share what your customers are saying about your products, your company...</p>",
            "info": "For best results, keep the word count consistent in each quote."
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Review",
        "settings": {}
      }
