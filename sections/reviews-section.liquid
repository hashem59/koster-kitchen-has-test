<section class="Section Section--spacingNormal review-section">
  <div class="Container">
    <!-- text two sides -->
    {% render 'text-two-sides' , section: section %}
    <!-- image with text part -->
    {% render 'image-with-text-overlay-snippet' , section: section%}
    <!-- testimonial part -->
    {% render 'testimonial-item' , section: section, block: block %}
  </div>
</section>

  {% schema %}
  {
    "name": "Reviews",
    "settings": [
      {
        "type": "header",
        "content": "Slider Options"
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Auto rotate between slides",
        "default": true
      },
      {
        "type": "range",
        "id": "cycle_speed",
        "min": 3,
        "max": 8,
        "step": 1,
        "unit": "sec",
        "label": "Change slides every",
        "default": 5
      },
      {
        "type": "header",
        "content": "Review Part"
      },
      {
        "type": "text",
        "id": "text_subheading",
        "label": "Sub-heading",
        "default": "Sub-heading"
      },
      {
        "type": "text",
        "id": "text_title",
        "label": "Heading",
        "default": "Title"
      },
      {
        "type": "range",
        "id": "text_size_desktop",
        "label": "Heading Size on desktop",
        "min": 20,
        "max": 100,
        "step": 2,
        "default": 46
      },
      {
        "type": "range",
        "id": "text_size_mobile",
        "label": "Heading Size on mobile",
        "min": 10,
        "max": 100,
        "step": 2,
        "default": 46
      },
      {
        "type": "richtext",
        "id": "text_content",
        "label": "Text",
        "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
      },
      {
        "type": "text",
        "id": "text_link_text",
        "label": "Link text"
      },
      {
        "type": "url",
        "id": "text_link_url",
        "label": "Link URL"
      },
      {
        "type": "range",
        "id": "reviews_score",
        "label": "Reviews rate",
        "min": 0,
        "max": 5,
        "step": 0.5,
        "default": 5
      },
      {
        "type": "text",
        "id": "reviews_subheading",
        "label": "Review Sub-heading",
        "default": "Sub-heading"
      },
      {
        "type": "text",
        "id": "reviews_subheading2",
        "label": "Review Sub-heading",
        "default": "Sub-heading"
      },
      {
        "type": "text",
        "id": "reviews_title",
        "label": "Review Heading",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "reviews_content",
        "label": "Text",
        "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
      },
      {
        "type": "text",
        "id": "reviews_link_text",
        "label": "Link text"
      },
      {
        "type": "url",
        "id": "reviews_link_url",
        "label": "Link URL"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Review position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "right"
      },
      {
        "type": "header",
        "content": "Image Part"
      },
      {
        "type": "checkbox",
        "id": "show_mobile",
        "label": "Show image on mobile",
        "default": false
      },
      {
        "type": "select",
        "id": "section_size",
        "label": "Section size",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "large"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "1500 x 800px .jpg recommended"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "overlay_color",
        "label": "Overlay",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Overlay opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default": 30
      },
      {
        "type": "text",
