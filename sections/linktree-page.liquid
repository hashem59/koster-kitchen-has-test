
<section class="Section Section--spacingNormal"  id="section--{{ section.id }}" data-section-id="{{ section.id }}">
    <div class="Container">
      <div class="PageContent">
          {%- if section.settings.title != blank -%}
            <header class="SectionHeader SectionHeader--center">
                <div class="Container">
                <h3 class="SectionHeader__SubHeading Heading u-h3">{{ section.settings.title | escape }}</h3>
                </div>
            </header>
          {%- endif -%}
          {%- for block in section.blocks -%}      
            {%- if block.settings.button_text != blank -%}
                <div class="SectionFooter">
                    <a href="{{ block.settings.link }}" target="_blank" class="Button Button--primary regular_font bold_weight">{{ block.settings.button_text | escape }}</a>
                </div>
            {%- endif -%}
          {%- endfor -%}
      </div>
    </div>
</section>

<style>
    #section--{{ section.id }} a.Button.Button--primary {
        width: 100%;
        min-height: 60px;
        padding: 20px;
        text-transform: uppercase;
        font-size: 17px;
    }
    #section--{{ section.id }} .SectionFooter{
        margin-top: 20px;
    }
    #section--{{ section.id }} .PageContent{
      max-width: 800px;
    }
</style>

{% schema %}
{
  "name": "Linktree Page",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "Linktree"
    }
  ],
  "blocks": [
    {
        "type": "button",
        "name": "button",
        "settings": [
            {
              "type": "text",
              "id": "button_text",
              "label": "Button text"
            },
            {
                
              "type": "url",
              "id": "link",
              "label": "Link"
            }
        ]
    }
  ]
}
{% endschema %}
